                           <li><i class="entypo-user"></i><%= link_to "Connect", connect_path %></li>
                        </ul>
                    </div>
                </noscript>
                <!-- end no script -->

                <div class="site-info">
                    <div class="primary-info">
                    <h1>Abridgr</h1>
                        <p>All News, All Viewpoints, Abrigd </p>

                        
                    
                    <div class="secondary-info">

                        <%= form_for @news_user, url: {controller: "news_user", action: "create"} do |f| %>
