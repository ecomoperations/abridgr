<body>
      <div id="menu">
            <ul>
                <li><i class="fa fa-home"></i><%= link_to "Home", root_path %></li>
                <li><i class="fa fa-comments-o"></i><%= link_to "Connect", connect_path %></li>                
            </ul>
        </div>

            <div class="sidebar col-md-5 col-sm-12 ">

                <span class="menu-trigger side-writer-icon animated fadeInDown">
