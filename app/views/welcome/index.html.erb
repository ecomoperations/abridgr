
            
            <div class="col-md-7 col-sm-12 col-md-offset-5 main-content">

                <div class="nav">
                	<%= link_to "Posts", "javascript:void(0);", :class => "select-posts active" %>
                    
                    <%= link_to "Topics", "javascript:void(0);", :class => "select-categories" %>
                </div>
            

            <div class="home-page-posts animated fadeIn ">
            <% @post.each do |post| %>
            	<div class="post">
                    <section>
                        <div class="post-preview col-xs-10  no-gutter">

                        <h2><%= link_to "#{post.title}", post_path(post) %></h2>
                        <p><%= post.body %> </p>

                        <p class="meta">
                            <%= post.author %> in <%= link_to "#{post.source}", "#{post.site_url}", :target => "_blank" %> <i class="link-spacer"></i> <i class="fa fa-slack"></i> <%= link_to "#{post.tag_list}", topic_path("#{post.tag_list}") %>
                            <a class="fa fa-twitter pull-right twitter-share-butto" data-related="flanaganlyfe" target="_blank"   href="http://twitter.com/intent/tweet"></a><i class="fa fa-facebook pull-right" ></i>
                        </p>
                        </div>

                        

                    </section>
                </div>
            <% end %>
                
            </div>
            <div class="home-page-categories hide animated fadeIn ">
            	<ul class="event-list">
            		<% @topics.each do |t| %>
						<li>
							
							<img alt="Independence Day" src="<%= t.picture_url %>" />
							<div class="info">
								<h2 class="title"><%= link_to "#{t.name}", topic_path(t.name) %></h2>
								<p class="desc"><%= t.description %></p>
							</div>
							<div class="social">
								<ul>
									<li class="facebook" style="width:33%;"><a href="#facebook"><span class="fa fa-facebook"></span></a></li>
									<li class="twitter twitter-share-button" style="width:34%;"><a href="https://twitter.com/share"><span class="fa fa-twitter"></span></a></li>
									<li class="google-plus" style="width:33%;"><a href="#google-plus"><span class="fa fa-google-plus"></span></a></li>
								</ul>
							</div>
						</li>
					<% end %>

					
				</ul>
            </div>
		</div>

 		
