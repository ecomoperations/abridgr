<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Source:</strong>
  <%= @post.source %>
</p>

<p>
  <strong>Site url:</strong>
  <%= @post.site_url %>
</p>

<p>
  <strong>Tag list:</strong>
  <%= @post.tag_list %>
</p>
<h3><%= raw @post.topics.map(&:name).map { |t| link_to t, topic_path(t) }.join(', ') %></h3>

<%= link_to 'Edit', edit_post_path(@post) %> |
